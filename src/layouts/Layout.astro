---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ClubPicture from "../components/ClubPicture.astro";
import SponsorSection from "../components/SponsorSection.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="nl">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Peloton Meilsen Wielerclub" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Peloton Meilsen</title>

    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Peloton Meilsen" />
    <link rel="manifest" href="/site.webmanifest" />
  </head>
  <body class="bg-primary text-secondary min-h-screen flex flex-col">
    <Header />

    <main class="flex-grow">
      <slot />
    </main>

    <SponsorSection />

    <ClubPicture />

    <Footer />
  </body>
</html>
