---
import type { CalendarEvents } from "../models/CalendarEvents";
import { CalendarView } from "./CalendarView";

// Get today in the format "2024-12-30"
const today = new Date().toISOString().split("T")[0];
const nextYear = new Date().getFullYear() + 1;
const nextYearToday = `${nextYear}-01-01`;

const googleApi = `https://clients6.google.com/calendar/v3/calendars/9bbd6f5fa0b03af92856f5f16dc87c3e515c9ad884df703aec2c16bb303d3bb7%40group.calendar.google.com/events?calendarId=9bbd6f5fa0b03af92856f5f16dc87c3e515c9ad884df703aec2c16bb303d3bb7%40group.calendar.google.com&singleEvents=true&eventTypes=default&eventTypes=focusTime&eventTypes=outOfOffice&timeZone=Europe%2FBrussels&maxAttendees=1&maxResults=250&sanitizeHtml=true&timeMin=${today}T00%3A00%3A00%2B18%3A00&timeMax=${nextYearToday}T00%3A00%3A00-18%3A00&key=AIzaSyBNlYH01_9Hc5S1J9vuFmu2nUqBZJNAXxs&%24unique=gc237`;
const response = await fetch(googleApi);
const data: CalendarEvents = await response.json();
const events = data.items || [];

const iCal = `https://calendar.google.com/calendar/ical/9bbd6f5fa0b03af92856f5f16dc87c3e515c9ad884df703aec2c16bb303d3bb7%40group.calendar.google.com/public/basic.ics`;
---

{
  events && events.length > 0 && (
    <div class="container mx-auto py-8 md:py-20">
      <h2
        id="agenda"
        class="text-4xl font-bold mb-8 flex justify-between items-center"
      >
        <span>Agenda</span>

        <a
          href={iCal}
          class="inline-block self-end text-sm underline decoration-dotted underline-offset-2 hover:decoration-solid"
          title="Voeg toe aan je agenda"
        >
          Voeg toe aan je agenda
        </a>
      </h2>

      <CalendarView events={events} client:only />
    </div>
  )
}

